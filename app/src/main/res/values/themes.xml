<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/steel_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/alabaster</item>
        <item name="colorOnSurface">@color/alabaster</item>
        <item name="colorError">@color/alabaster</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_in_right</item>
    </style>


    <style name="viewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="textViewSettingsTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textViewNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nameTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewProfessionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="additionalTextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="textViewAddressStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">52dp</item>
    </style>

    <style name="socialMediaLayout">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">62dp</item>
    </style>

    <style name="buttonEditProfileStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="buttonEditProfileTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="viewMyContactsTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
    </style>

    <style name="textViewLetsGetAcquaintedTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="widthHeightIsWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textViewLFillOutTextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewEmailTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewAlreadyHaveAccountTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="checkBoxRememberMeTextAppearance">
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewOrTextAppearance">
        <item name="android:fontFamily">@font/opensans_semi_bold</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewTermAndConditionTextAppearance">
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">12sp</item>

    </style>

</resources>