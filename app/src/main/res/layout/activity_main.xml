<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_top_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/steel_gray"
        app:layout_constraintBottom_toTopOf="@id/view_bottom_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.5" />

    <View
        android:id="@+id/view_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/alabaster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top_container"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_semi_bold"
        android:text="Settings"

        android:textColor="@color/alabaster"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view_top_container"
        app:layout_constraintTop_toTopOf="@id/view_top_container" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="113dp"

        android:layout_marginTop="79dp"

        android:background="@drawable/picture_background"
        android:contentDescription="Noname"
        android:scaleType="centerCrop"
        android:src="@drawable/image"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:fontFamily="@font/opensans_semi_bold"
        android:text="Lucile Alvarado"
        android:textColor="@color/alabaster"

        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/text_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_regular"
        android:text="Graphic designer"

        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:fontFamily="@font/opensans_regular"
        android:text="5295 Gaylord Walks Apk. 110"
        android:textColor="@color/grey"

        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_profession" />

    <ImageButton
        android:id="@+id/imageViewFacebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="62dp"

        android:layout_marginEnd="32dp"
        android:background="@null"
        android:src="@drawable/fb"

        app:layout_constraintEnd_toStartOf="@id/imageViewLinkedin"

        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />

    <ImageButton
        android:id="@+id/imageViewLinkedin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="62dp"

        android:background="@null"
        android:src="@drawable/linkedin"
        app:layout_constraintEnd_toEndOf="@id/view_bottom_container"
        app:layout_constraintStart_toStartOf="@id/view_bottom_container"

        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />

    <ImageButton
        android:id="@+id/imageViewInstagram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"

        android:layout_marginTop="62dp"
        android:background="@null"
        android:src="@drawable/instagram"
        app:layout_constraintStart_toEndOf="@id/imageViewLinkedin"

        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />

    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/button"

        android:fontFamily="@font/opensans_semi_bold"
        android:letterSpacing="0"
        android:lineSpacingExtra="-1sp"
        android:text="Edit profile"
        android:textAllCaps="false"
        android:textColor="@color/black"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLinkedin" />


    <Button
        android:id="@+id/buttonViewMyContacts"
        android:layout_width="328dp"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/opensans_regular"
        android:letterSpacing="0.09"
        android:text="@string/view_my_con"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonEditProfile" />


</androidx.constraintlayout.widget.ConstraintLayout>