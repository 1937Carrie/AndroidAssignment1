<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/viewTopContainer"

        style="@style/viewStyle"

        android:background="@color/topViewColor"

        app:layout_constraintBottom_toTopOf="@id/viewBottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.5" />

    <View
        android:id="@+id/viewBottomContainer"

        style="@style/viewStyle"

        android:background="@color/bottomViewColor"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopContainer"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/textViewSettings"

        style="@style/textViewSettingsStyle"

        android:text="@string/settings"
        android:textAppearance="@style/textViewSettingsTextAppearance"

        app:layout_constraintStart_toStartOf="@id/viewTopContainer"
        app:layout_constraintTop_toTopOf="@id/viewTopContainer" />

    <ImageView
        android:id="@+id/imageViewPicture"

        style="@style/imageViewPictureStyle"

        android:contentDescription="Profile image"
        android:scaleType="centerCrop"
        android:src="@drawable/tmp_rounded_image"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewName"

        style="@style/textViewNameStyle"

        android:text="@string/name"
        android:textAppearance="@style/nameTextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewPicture" />

    <TextView
        android:id="@+id/textViewProfession"

        style="@style/textViewProfessionStyle"

        android:text="@string/profession"
        android:textAppearance="@style/additionalTextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />

    <TextView
        android:id="@+id/textViewAddress"

        style="@style/textViewAddressStyle"

        android:text="@string/address"
        android:textAppearance="@style/additionalTextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProfession" />

    <ImageButton
        android:id="@+id/imageViewFacebook"

        style="@style/socialMediaLayout"
        android:layout_marginEnd="32dp"

        android:background="@null"

        android:contentDescription="Facebook icon"
        android:src="@drawable/fb"

        app:layout_constraintEnd_toStartOf="@id/imageButtonLinkedIn"
        app:layout_constraintTop_toTopOf="@id/viewBottomContainer" />

    <ImageButton
        android:id="@+id/imageButtonLinkedIn"
        style="@style/socialMediaLayout"

        android:background="@null"
        android:contentDescription="LinkedIn icon"
        android:src="@drawable/linkedin"

        app:layout_constraintEnd_toEndOf="@id/viewBottomContainer"
        app:layout_constraintStart_toStartOf="@id/viewBottomContainer"
        app:layout_constraintTop_toTopOf="@id/viewBottomContainer" />

    <ImageButton
        android:id="@+id/imageInstagram"
        style="@style/socialMediaLayout"

        android:layout_marginStart="32dp"
        android:background="@null"

        android:contentDescription="Instagram icon"
        android:src="@drawable/instagram"

        app:layout_constraintStart_toEndOf="@id/imageButtonLinkedIn"
        app:layout_constraintTop_toTopOf="@id/viewBottomContainer" />


    <Button
        android:id="@+id/buttonEditProfile"
        style="@style/buttonEditProfileStyle"

        android:background="@drawable/selector_xml_name"
        android:text="@string/edite_profile"

        android:textAppearance="@style/buttonEditProfileTextAppearance"
        android:textColor="@color/buttonEditProfileTextColor"
        app:backgroundTint="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButtonLinkedIn" />


    <Button
        android:id="@+id/buttonViewMyContacts"

        style="@style/buttonViewMyContactsStyle"

        android:backgroundTint="@color/orange"

        android:text="@string/view_my_contacts"
        android:textAppearance="@style/viewMyContactsTextAppearance"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonEditProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>