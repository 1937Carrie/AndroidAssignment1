<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_top_container"

        style="@style/viewLayout"

        android:background="@color/steel_gray"

        app:layout_constraintBottom_toTopOf="@id/view_bottom_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.5" />

    <View
        android:id="@+id/view_bottom_container"

        style="@style/viewLayout"

        android:background="@color/alabaster"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top_container"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/text_settings"

        style="@style/settingsLayout"

        android:text="@string/settings"
        android:textAppearance="@style/settingsTextAppearance"

        app:layout_constraintStart_toStartOf="@id/view_top_container"
        app:layout_constraintTop_toTopOf="@id/view_top_container" />

    <ImageView
        android:id="@+id/image_picture"

        style="@style/imageLayout"

        android:contentDescription="Profile image"
        android:scaleType="centerCrop"
        android:src="@drawable/tmp_rounded_image"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name"

        style="@style/nameLayout"

        android:text="@string/name"
        android:textAppearance="@style/nameTextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_picture" />

    <TextView
        android:id="@+id/text_profession"

        style="@style/professionLayout"

        android:text="@string/profession"
        android:textAppearance="@style/h3TextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <TextView
        android:id="@+id/text_address"
        style="@style/addressLayout"

        android:text="@string/address"
        android:textAppearance="@style/h3TextAppearance"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_profession" />

    <ImageButton
        android:id="@+id/image_facebook"

        style="@style/socialMediaLayout"
        android:layout_marginEnd="32dp"

        android:background="@null"

        android:contentDescription="Facebook icon"
        android:src="@drawable/fb"

        app:layout_constraintEnd_toStartOf="@id/image_linkedin"
        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />

    <ImageButton
        android:id="@+id/image_linkedin"
        style="@style/socialMediaLayout"

        android:background="@null"
        android:contentDescription="LinkedIn icon"
        android:src="@drawable/linkedin"

        app:layout_constraintEnd_toEndOf="@id/view_bottom_container"
        app:layout_constraintStart_toStartOf="@id/view_bottom_container"
        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />

    <ImageButton
        android:id="@+id/image_instagram"
        style="@style/socialMediaLayout"

        android:layout_marginStart="32dp"
        android:background="@null"

        android:contentDescription="Instagram icon"
        android:src="@drawable/instagram"

        app:layout_constraintStart_toEndOf="@id/image_linkedin"
        app:layout_constraintTop_toTopOf="@id/view_bottom_container" />


    <Button
        android:id="@+id/button_editprofile"
        style="@style/edit_profileLayout"

        android:background="@drawable/button"
        android:onClick="onClickEditProfile"
        android:text="@string/edite_profile"

        android:textAppearance="@style/edit_profileTextAppearance"
        android:textColor="@color/black"
        app:backgroundTint="@null"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_linkedin" />


    <Button
        android:id="@+id/button_viewmycontacts"

        style="@style/view_my_contactsLayout"

        android:backgroundTint="@color/orange"

        android:text="@string/view_my_contacts"
        android:textAppearance="@style/view_my_contactsTextAppearance"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_editprofile" />
</androidx.constraintlayout.widget.ConstraintLayout>